<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>net.consolaktif.discord.launcher</string>
    
    <!-- KRİTİK BÖLÜM: Ortam Değişkenleri Native Olarak Tanımlanıyor -->
    <!-- Bu sayede Updater, Helper, GPU Process hepsi proxy'yi görür -->
    <key>EnvironmentVariables</key>
    <dict>
        <key>http_proxy</key>
        <string>http://127.0.0.1:8080</string>
        <key>https_proxy</key>
        <string>http://127.0.0.1:8080</string>
        <key>all_proxy</key>
        <string>http://127.0.0.1:8080</string>
        <key>PATH</key>
        <string>/opt/homebrew/bin:/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
    </dict>

    <key>ProgramArguments</key>
    <array>
        <string>/bin/zsh</string>
        <string>-c</string>
        <string>
# Port 8080'in hazır olmasını bekle
echo "Proxy (8080) bekleniyor..."
DEADLINE=$((SECONDS+45))
while ! nc -z 127.0.0.1 8080 2>/dev/null; do
  if [ $SECONDS -ge $DEADLINE ]; then break; fi
  sleep 0.5
done

# Discord'u en doğal haliyle başlat (Ekstra parametreye gerek kalmadı, yukarıdaki EnvVar yeterli)
exec /Applications/Discord.app/Contents/MacOS/Discord
        </string>
    </array>
    <key>RunAtLoad</key>
    <true/>
    <key>KeepAlive</key>
    <false/>
</dict>
</plist>